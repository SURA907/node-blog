<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>the article</title>
    <link rel="stylesheet" href="/css/clearStyle.css">
    <link rel="stylesheet" href="/css/add_update_article.css">
    <script>
        window.onload = function () {
            const btn_go_back = document.getElementById('go-back');
            btn_go_back.onclick = function (event) {
                var event = event || window.event;
                window.location.href = '/admin/admin_article';
                event.preventDefault();
            };
        };
    </script>
</head>
<body>

<img src="/images/add_article_title_img.png" class="add-article-title-img" alt="">

<div class="content">
    <form action="/admin/admin_article/update_article" class="input" method="post">

        <div class="article-title-box">
            标题 <input type="text" value="<%=article_massage[0].article_title%>" name="article_title" autocomplete="off" class="article-title">
        </div>

        <textarea name="article_body" class="article-body">
            <%=article_massage[0].article_body%>
        </textarea>

        <input type="hidden" name="article_id" value="<%=article_massage[0].article_id%>">

        <button class="btn-go-back" id="go-back">取消</button>
        <input type="submit" class="btn-submit">

    </form>
</div>

</body>
</html>